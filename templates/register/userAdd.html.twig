{% extends 'base.html.twig' %}

{% block title %}Ajouter Utilisateur{% endblock %}

{% block body %}
    <h1>Ajouter Un Utilisateur</h1>
    <div class="form-container1">
        <div class="form-container">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-control-label'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.prenom, 'Pr√©nom', {'label_attr': {'class': 'form-control-label'}}) }}
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-control-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'form-control-label'}}) }}
                {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
            </div>
            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
            {{ form_end(form) }}
            {{msg}}
        </div>
    </div>
{% endblock %}

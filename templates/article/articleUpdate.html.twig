{% extends 'base.html.twig' %}

{% block title %}Mettre à jour Article{% endblock %}

{% block body %}
<div class="form-container1">
    <div class="form-container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'form-control-label'}}) }}
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }} 
                </div>
                <div class="form-group">
                    {{ form_label(form.contenu, 'Contenu', {'label_attr': {'class': 'form-control-label'}}) }}
                    {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                     {{ form_label(form.categories, 'Catégories', {'label_attr': {'class': 'form-control-label'}}) }}
                     {{ form_widget(form.categories, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                     {{ form_label(form.user, 'Utilisateur', {'label_attr': {'class': 'form-control-label'}}) }}
                     {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.date, 'Date', {'label_attr': {'class': 'form-control-label'}}) }}
                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.Envoyer, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
                {{ form_end(form) }}
                {% if msg is defined %}
                    <p>{{ msg }}</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
